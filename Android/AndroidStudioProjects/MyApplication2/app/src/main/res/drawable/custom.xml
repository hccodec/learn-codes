<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Bottom 2dp shadow：底部阴影层-->
    <item android:start="5dp"
        android:end="5dp"
        android:top="7dp"
        android:bottom="7dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#941c43de"
                android:endColor="#a4334ae2"
                android:centerColor="#6d0062ff"
                android:centerY="0.05"
                android:centerX="0.9"
                android:gradientRadius="500dp"
                android:type="radial" />
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:dashWidth="8dp"
                android:color="#2546b3" android:dashGap="2dp"/>
        </shape>
    </item>
    <!--White Top color：顶部层-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6343c3b8"/>
            <corners android:radius="30dp" />
            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp" />
            <!--边框 宽1px 颜色skyBluesss-->
            <stroke
                android:width="6px"
                android:color="#142bdb"/>
        </shape>
    </item>
</layer-list>