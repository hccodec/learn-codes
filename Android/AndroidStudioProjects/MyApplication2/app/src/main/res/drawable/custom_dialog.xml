<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Bottom 2dp shadow：底部阴影层-->
    <item android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#940b1da0"
                android:endColor="#a40f24ae"
                android:centerColor="#6a1753b3"
                android:centerY="0.05"
                android:centerX="0.9"
                android:gradientRadius="500dp"
                android:type="radial" />
            <stroke android:width="2dp" android:dashWidth="8dp"
                android:color="#1743d1" android:dashGap="2dp"/>
        </shape>
    </item>
    <!--White Top color：顶部层-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6343c3b8"/>
            <corners android:radius="10dp" />
            <padding
                android:bottom="50dp"
                android:left="50dp"
                android:right="50dp"
                android:top="50dp" />
            <!--边框 宽1px 颜色skyBlue-sss-->
            <stroke
                android:width="10px"
                android:color="@color/design_default_color_primary_dark"/>
        </shape>
    </item>
</layer-list>