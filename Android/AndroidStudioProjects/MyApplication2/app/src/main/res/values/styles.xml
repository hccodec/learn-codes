<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:shape">rectangle</item>
        <item name="android:colorPrimary">?attr/colorPrimaryDark</item>
        <item name="android:colorAccent">?attr/colorAccent</item>
        <item name="colorButtonNormal">#965dd1fb</item>
        <item name="android:windowBackground">@drawable/background_gradient</item>

    </style>

    <style name="MyDialog" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorButtonNormal">#965dd1fb</item>
    </style>

</resources>
